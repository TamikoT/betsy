
<section>
  <%= form_for @product do |f| %>


    <div>
      <%= f.label :name, class: "label"%>
      <%= f.text_field :name, class: "field"%>
    </div>

    <div>
      <%= f.label :price, class: "label"%>
      <%= f.text_field :price, class: "field"%>
    </div>

    <div>
      <%= f.label :stock, class: "label"%>
      <%= f.text_field :stock, class: "field"%>
    </div>

    <div>
      <%= f.label :photo , "Photo Url",  class: "label"%>
      <%= f.text_field :photo , class: "field"%>
    </div>

    <div>
      <%= f.label :description ,   class: "label"%>
      <%= f.text_area :description , class: "field"%>
    </div>


    <div id = "_form_section_submit">
      <%= f.submit value: "SAVE"%>
    </div>
  <% end %>
</section>
