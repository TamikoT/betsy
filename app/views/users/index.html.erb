<h3>Browse by Users</h3>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th width="100">Number of Products</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.products.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Home Page", root_path, class: "button" %>
